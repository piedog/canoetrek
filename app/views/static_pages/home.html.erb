<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'shared/stats' %>
            </section>
            <section>
                <%= render 'shared/trip_form' %>
            </section>
        </aside>

        <div class="span8">
            <h3>Trips that I have joined</h3>
            <%= render 'shared/tripfeed' %>
        </div>
    </div>

<% else %>
    <div class="center hero-unit">
        <h2>
            This is the home page for the
            <a href="http://www.waterpathcanoe.com">CanoeTrek Page</a>
        </h2>

        <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>

    <%= link_to image_tag("wpccad_icon.jpg", alt: "Rails"), 'http://www.waterpathcanoe.com' %>
<% end %>
