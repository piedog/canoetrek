<% provide(:title, @user.name) %>
<div>
    <% flash.each do |key, value| %>
        <%=content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
</div>
<div class="row">
    <aside class="span4">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
</div>
