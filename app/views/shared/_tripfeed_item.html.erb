<li id="<%= tripfeed_item.id %>">
    <%= link_to gravatar_for(tripfeed_item.user), tripfeed_item.user %>
    <span class="user">
        <%= link_to tripfeed_item.user.name, tripfeed_item.user %>
    </span>
    <span class="content"><%= tripfeed_item.name %></span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(tripfeed_item.created_at) %> ago.
    </span>
    <% if current_user?(tripfeed_item.user) %>
        <%= link_to "delete", tripfeed_item, method: :delete, data: { confirm: "You sure?" }, title: tripfeed_item.name %>
    <% end %>
</li>
